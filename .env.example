# --- Configuração do Servidor ---
PORT=4000
NODE_ENV=development

# --- Conexão com Banco de Dados (Aplicação Local) ---
# Aponta para localhost:3307 (porta exposta pelo Docker)
DATABASE_HOST=localhost
DATABASE_PORT=3307
DATABASE_USER=root
DATABASE_PASSWORD=root
DATABASE_NAME=confirma_ai_db

# Connection String do Prisma
# Deve corresponder aos dados acima: mysql://user:pass@host:port/db
DATABASE_URL="mysql://root:root@localhost:3307/confirma_ai_db"

# --- Segurança ---
JWT_SECRET="troque_isso_por_uma_senha_segura"

# --- URLs do Front-end (CORS) ---
FRONTEND_URL_DEV="http://localhost:5173"
FRONTEND_URL_PROD="https://confirma.ai"

# --- Credenciais do Admin Global (para rodar o Seed) ---
GLOBAL_ADMIN_NOME="Admin Global"
GLOBAL_ADMIN_EMAIL="admin@confirma.ai"
GLOBAL_ADMIN_SENHA="adminpassword123"